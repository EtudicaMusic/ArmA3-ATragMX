<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sceinox.atragmx.activities.GunNoteActivity"
    android:id="@+id/Layout_Linear_Note">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:text="Here you can write notes"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/Edit_NoteText"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:background="#e3e3e3"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:gravity="top|center_vertical"
            android:layout_height="400dp"
            android:scrollHorizontally="false" />

        <Button
            android:text="Cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Edit_NoteText"
            android:layout_alignParentStart="true"
            android:id="@+id/Button_Cancel"
            android:background="#aeb6b9"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:onClick="onCancelClick"/>

        <Button
            android:text="Edit"
            android:layout_height="40dp"
            android:id="@+id/Button_Edit"
            android:layout_width="100dp"
            android:background="#aeb6b9"
            android:layout_below="@+id/Edit_NoteText"
            android:layout_alignEnd="@+id/Edit_NoteText"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:onClick="onEditClick"/>

        <Button
            android:text="Save"
            android:layout_below="@+id/Edit_NoteText"
            android:layout_centerHorizontal="true"
            android:id="@+id/Button_Save"
            android:background="#aeb6b9"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif"
            android:onClick="onSaveClick"/>

        <TextView
            android:text=".338 LM 250gr"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Edit_NoteText"
            android:layout_marginTop="10dp"
            android:id="@+id/Text_GunInfo"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textStyle="normal|bold"
            android:gravity="center_vertical" />
    </RelativeLayout>
</LinearLayout>